<Window x:Class="AccessCodeLib.AccUnit.VbeAddIn.UserSettingWindow.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:usersettingwindow="clr-namespace:AccessCodeLib.AccUnit.VbeAddIn.UserSettingWindow" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        Title="Settings" Height="300" Width="400"
        >
    <Grid>
        <StackPanel>
            <ItemsControl ItemsSource="{Binding SettingsProperties}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Name}" Width="150" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Save" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>
